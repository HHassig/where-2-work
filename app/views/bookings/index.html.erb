<h1 class="visit-title">Your Visits</h1>
<% if @user_bookings.size > 0 %>
  <% @user_bookings.each do |booking| %>
    <div class="card-product-booking">
      <%= cl_image_tag booking.venue.photo.key %>
      <div class="card-product-infos">
        <h2><%= booking.venue.name %></h2>
        <p><%= link_to booking.date, booking_path(booking) %></p>
        <p><%= booking.venue.address %></p>
      </div>
    </div>
  <% end %>
  <% else %>
    <p>No more visits.
    <br>
    <%= link_to "New Visit", venues_path, class: "btn btn-gradient" %></p>
  <% end %>
