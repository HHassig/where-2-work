<div class="card-trip">
  <%= cl_image_tag @venue.photo.key %>
  <div class="card-trip-infos">
    <div>
      <h2><%= @venue.name %></h2>
      <p><%= @venue.address %></p>
      <% @venue.all_reviews.each do |review| %>
        <h3><%= review.title %></h3>
        <p>
        <% review.rating.times do %>
          <i class="fas fa-star"></i>
        <% end %>
        </p>
        <p><%= "#{review.comment.first(60)}..." %></p>
        <br>
      <% end %>
    </div>
    <h3 class="card-trip-heart"><i class="fa-regular fa-heart"></i></h3>
    <img src="https://i.imgur.com/T1ryMJk.png" class="card-trip-user avatar-bordered" />
  </div>
  <%= link_to "Visit #{@venue.category}", new_venue_booking_path, class: "btn btn-gradient" %>
  <%= link_to "All Venues", venues_path, class: "btn btn-gradient" %>
</div>

<div>
  <div id="right-side">
    <div class="venue-title" id="booking">
      <h2>Checkout</h2>
      <div class="form-styled" >
        <%= simple_form_for [@venue, @booking] do |f| %>
          <%= f.input(:date, as: :date)%>
          <%= f.submit class:"btn-rent", value:"Book" %>
      </div>
        <% end %>
    </div>
  </div>
</div>
