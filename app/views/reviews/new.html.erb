<div class="venue-title">
  <h2>Leave a Review</h2>
    <div class="form-group" style="width: 80%" >
      <%= simple_form_for [@booking, @review], data: { turbo: false } do |f| %>
        <%= f.input :rating, collection: (1..5).to_a, label: false, input_html: {data: {controller: "star-rating"}} %>
        <%= f.input :comment%>
        <div data-controller="speed-test">
          <div class="wifistests">
            <p id="button1">Wifi Rating</p>
            <p id="button2">Speed Test</p>
          </div>
          <div id="div1" style="display:none">
            <%= f.input :wifi, collection: (1..3).to_a, label: "Wi-Fi Quality", input_html: {data: {controller: "star-rating"}} %>
          </div>
          <div id="div2" style="display:none">
            <%= f.input :speedtest, as: :boolean %>
          </div>
        </div>
        <%= f.input :power_outlets%>
        <%= f.input :suited_for_calls%>
        <%= f.input :natural_light%>
        <%= f.input :photo, as: :file %>
        <%= f.submit "Add Review", class: "btn btn-gradientdeux" %>
      <% end %>
      <div>
        <%= link_to "Back to all Venues", venues_path, class: "btn btn-gradientdeux" %>
      </div>
    </div>
</div>



<script>
// Get references to the buttons and divs
var button1 = document.getElementById('button1');
var button2 = document.getElementById('button2');
var div1 = document.getElementById('div1');
var div2 = document.getElementById('div2');

// Attach event listeners to the buttons
button1.addEventListener('click', function() {
  // Show div1 and hide div2
  div1.style.display = 'block';
  div2.style.display = 'none';
});

button2.addEventListener('click', function() {
  // Show div2 and hide div1
  div2.style.display = 'block';
  div1.style.display = 'none';
});
</script>
